    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version",
      "cover 99.5%"
    ]
  },
  "devDependencies": {
    "eslint": "^8.1.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.4",
